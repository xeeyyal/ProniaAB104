@model List<Slide>
@{
    int count = 0;
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slide Table</h4>
                    <a asp-action="create" asp-controller="slide" class="btn btn-success ">Create Slide</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th> Image</th>
                                    <th> Title</th>
                                    <th> Order</th>
                                    <th> Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slide slide in Model)
                                {
                                    count++;
                                    <tr>
                                        <td> @count</td>
                                        <td>
                                            <img style="width:110px;height:110px;" src="~/assets/images/slider/@slide.Image"/>
                                        </td>
                                        <td> @slide.Title </td>
                                        <td> @slide.Order </td>
                                        <td>
                                            <a asp-action="details" asp-controller="slide" asp-route-id="@slide.Id" class="btn btn-secondary "> <i class="mdi mdi-alert-box"></i> Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>